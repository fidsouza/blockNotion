{
  "compilerOptions": {
    "target": "esnext",   
    "module": "commonjs",                                
    "lib": ["es6"],                                      
    "rootDir": "src",                                    
    "resolveJsonModule": true,                           
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true                                 
  },
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
}
